<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
    <title>Moodle stats</title>
  </head>
  <body>
    <h1>Moodle stats for {{course}}</h1>

    <h3>People</h3>
    <table>
      <thead>
        <tr>
          <th colspan="3">Personal data</th>
          <th colspan="3">Quiz 1</th>
          <th colspan="3">Quiz 2</th>
          <th colspan="3">Quiz 3</th>
          <th colspan="3">All quizzes</th>
        </tr>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>E-mail</th>

          <th>Attempts</th>
          <th>Before pass</th>
          <th>Top score</th>

          <th>Attempts</th>
          <th>Before pass</th>
          <th>Top score</th>

          <th>Attempts</th>
          <th>Before pass</th>
          <th>Top score</th>

          <th>Attempts</th>
          <th>Before pass</th>
          <th>Score</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each people}}
        <tr>
          <td>{{firstname}}</td>
          <td>{{lastname}}</td>
          <td>{{email}}</td>
          <td>{{attempts.length}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>